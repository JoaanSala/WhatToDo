<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayCardDialogFragment"
    android:background="#FFCE1C"
    android:padding="5dp">

    <LinearLayout
    android:id="@+id/title_payment"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#000000"
    android:gravity="center"
    android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resum Pagament"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#FFCE1C"
            android:fontFamily="@font/carter_one"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_Ofertpayment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="#5F000000"
        android:layout_below="@id/title_payment"
        android:src="@drawable/back_degustacion">

        <TextView
            android:id="@+id/ofert_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Visita guiada gratuïta"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/carter_one"
            android:background="#C0000000"
            android:gravity="center_horizontal|center_vertical"/>

        <TextView
            android:id="@+id/ofert_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="La Seu Vella, Lleida"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:background="#FFDD00"
            android:fontFamily="@font/carter_one"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/price_ofert"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/title_Ofertpayment"
        android:background="@drawable/border_ticket">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL :"
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00€"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="#5E5D5D"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:padding="4dp"
        android:layout_below="@id/price_ofert"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/buttonCreditHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:text="ACCEPTAR"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnCancell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:text="CANCEL·LAR"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/secondary_text_light_nodisable"/>
    </LinearLayout>


</RelativeLayout>