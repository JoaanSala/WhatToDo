<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment"
    android:background="@drawable/fondo_foto_perfil">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/pref_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/menu_yellow"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="55dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/input_profileimage"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/profile_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="65dp"
                    android:textColor="#FFCE1C"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_yellow_white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|center_vertical"/>

            <RelativeLayout
                android:id="@+id/rl_data_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="30dp">

                <RelativeLayout
                    android:id="@+id/email_rl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/circle_email"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile_arroba"/>

                    <TextView
                        android:id="@+id/email_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_toEndOf="@+id/circle_email"
                        android:layout_toRightOf="@+id/circle_email"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/email_c"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:layout_below="@id/email_t"
                        android:layout_toEndOf="@+id/circle_email"
                        android:layout_toRightOf="@+id/circle_email"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/birth_rl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/email_rl"
                    android:layout_marginTop="25dp">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/circle_birth"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile_birth"/>

                    <TextView
                        android:id="@+id/birth_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data de naixement:"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_toEndOf="@+id/circle_birth"
                        android:layout_toRightOf="@+id/circle_birth"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/birth_c"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:layout_below="@id/birth_t"
                        android:layout_toEndOf="@+id/circle_birth"
                        android:layout_toRightOf="@+id/circle_birth"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ciutat_rl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/birth_rl"
                    android:layout_marginTop="25dp">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/circle_ciutat"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile_location"/>

                    <TextView
                        android:id="@+id/ciutat_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ciutat:"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_toEndOf="@+id/circle_ciutat"
                        android:layout_toRightOf="@+id/circle_ciutat"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/ciutat_c"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:layout_below="@id/ciutat_t"
                        android:layout_toEndOf="@+id/circle_ciutat"
                        android:layout_toRightOf="@+id/circle_ciutat"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/ciutat_rl"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/butt_logout"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:background="#00000000"
                        android:text="@string/tancar_sessio"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>






</RelativeLayout>