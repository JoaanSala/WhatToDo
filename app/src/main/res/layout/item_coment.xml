<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:paddingBottom="5dp"
        android:background="#E3E0E0">

        <TextView
            android:id="@+id/textUser"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="JS"
            android:background="@drawable/input_comentimage"
            android:textColor="#FFCE1C"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/textComentari"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ExcelÂ·lent!!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_toEndOf="@+id/textUser"
            android:layout_toRightOf="@+id/textUser"
            android:maxLines="1"
            android:maxLength="30"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textComentari"
            android:layout_toEndOf="@id/textUser"
            android:layout_toRightOf="@id/textUser">
            <ImageView
                android:id="@+id/com_estrella1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/estrella_u"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/com_estrella2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/estrella_u"
                android:layout_marginRight="15dp"
                android:layout_toEndOf="@id/com_estrella1"
                android:layout_toRightOf="@id/com_estrella1"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/com_estrella3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/estrella_u"
                android:layout_marginRight="15dp"
                android:layout_toEndOf="@id/com_estrella2"
                android:layout_toRightOf="@id/com_estrella2"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/com_estrella4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/estrella_u"
                android:layout_marginRight="15dp"
                android:layout_toEndOf="@id/com_estrella3"
                android:layout_toRightOf="@id/com_estrella3"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/com_estrella5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/estrella_u"
                android:layout_toEndOf="@id/com_estrella4"
                android:layout_toRightOf="@id/com_estrella4"
                android:clickable="true"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>