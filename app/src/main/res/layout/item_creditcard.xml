<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:paddingBottom="5dp"
        android:background="#E3E0E0">


        <LinearLayout
            android:id="@+id/linear_checkbox"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:buttonTint="#000000" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageCard"
            android:layout_width="250px"
            android:layout_height="220px"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="4dp"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:layout_toEndOf="@+id/linear_checkbox"
            android:layout_toRightOf="@+id/linear_checkbox"/>

        <TextView
            android:id="@+id/textCardNumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="**** **** **** ****"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:paddingRight="25dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="right"/>
        
        <TextView
            android:id="@+id/textValidateDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Expira: -- / ----"
            android:textSize="15sp"
            android:textColor="#404040"
            android:paddingRight="25dp"
            android:paddingTop="20px"
            android:layout_below="@+id/textCardNumber"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="right"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>