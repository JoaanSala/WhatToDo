<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:background="#E3E0E0">

        <LinearLayout
            android:id="@+id/linear_checkbox"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radioButton_payied"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:buttonTint="#000000"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/linear_checkbox"
            android:layout_toRightOf="@+id/linear_checkbox">

            <ImageView
                android:id="@+id/imageOfertCard"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_visa" />

            <TextView
                android:id="@+id/textCardNumberOfert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="**** **** **** 4321"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#888888"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textValidateDateOfert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="11/25"
                android:textSize="15dp"
                android:textStyle="bold
"
                android:textColor="#FF0000"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>